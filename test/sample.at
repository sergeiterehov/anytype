defined Widget is object (
    option sName - string,
    option data - array of one of (
        UniversalExtendedCardWidgetData
    )
)

defined Boolean is one of (
    value 1,
    value 0
)

defined Measure is object (
    option sMeasureName_RU - string,
    option sMeasureName_EN - string
)

defined Actions is object (
    option actions - object (
        option action - array of any
    )
)

defined UniversalExtendedCardWidgetData is object (
    option line - array [0..1000] of object (
        required yCoordFrom - integer
    ),
    required object - array of one of (
        object (
            with Measure,
            with Actions,
            required sObjectType - value "deviation",
            required sName - string,
            required fValue - integer,
            option nPrecision - integer,
            option isGood - Boolean
        )
    )
)

required Widget
